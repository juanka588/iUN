<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unal.iun">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="false" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission
        android:name="android.permission.CALL_PHONE"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:required="false" />
    <uses-permission
        android:name="com.android.launcher.permission.INSTALL_SHORTCUT"
        android:required="false" />
    <uses-permission
        android:name="android.permission.WAKE_LOCK"
        android:required="false" />

    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/iUNTheme">

        <!-- MOCA SDK configuration -->
        <meta-data
            android:name="moca.APP_KEY"
            android:value="9tQli8VHSPawaT5TY62Y1g" />
        <meta-data
            android:name="moca.APP_SECRET"
            android:value="G9xOItMmPXADUb2dWUz6EwQlxUQ=" />
        <meta-data
            android:name="moca.LOG_LEVEL"
            android:value="debug" />
        <meta-data
            android:name="moca.AUTOMATIC_PUSH_SETUP_ENABLED"
            android:value="true" />
        <meta-data
            android:name="moca.PROXIMITY_SERVICE_ENABLED"
            android:value="true" />
        <meta-data
            android:name="moca.GEOLOCATION_SERVICE_ENABLED"
            android:value="true" />
        <meta-data
            android:name="moca.BACKGROUND_LOCATION_ENABLED"
            android:value="true" />
        <meta-data
            android:name="moca.DATA_FETCH_INTERVAL_MS"
            android:value="auto" />
        <meta-data
            android:name="moca.EVENT_UPLOAD_INTERVAL_MS"
            android:value="auto" />
        <meta-data
            android:name="moca.MOCA_DRIVER_ENABLED"
            android:value="true" />
        <!--Optional: Include it for remote push notifications-->
        <!--Be careful with the space before the number-->
        <meta-data
            android:name="moca.GCM_SENDER"
            android:value="\ YOUR_GCM_SENDER_ID" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".GUI.MapaActivity"
            android:label="@string/title_activity_mapa"
            android:logo="@drawable/home2"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".GUI.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleInstance"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GUI.WebActivity"
            android:label="@string/title_activity_web"
            android:logo="@drawable/logo" />
        <activity
            android:name=".GUI.InstitucionesActivity"
            android:label="@string/title_activity_instituciones"
            android:logo="@drawable/home2" />
        <activity
            android:name=".GUI.DetailsActivity"
            android:label="@string/title_activity_activity_details"
            android:logo="@drawable/home2" />
        <activity
            android:name=".GUI.RadioActivity"
            android:label="@string/title_activity_radio"
            android:logo="@drawable/home2"
            android:parentActivityName=".GUI.MenuWebTabActivity"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GUI.MainActivity" />
        </activity>
        <activity
            android:name=".GUI.MenuWEBActivity"
            android:label="@string/title_activity_menu_web"
            android:logo="@drawable/home2" />
        <activity
            android:name=".GUI.DirectorioActivity"
            android:label="@string/title_activity_directorio"
            android:logo="@drawable/logo"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".GUI.License"
            android:label="@string/title_activity_license"
            android:logo="@drawable/home2" />
        <activity
            android:name=".GUI.MenuWebTabActivity"
            android:label="@string/title_activity_menu_web_tab"
            android:parentActivityName=".GUI.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GUI.MainActivity" />
        </activity>
        <activity
            android:name=".GUI.DirectoryActivity"
            android:label="@string/title_activity_directory"
            android:parentActivityName=".GUI.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GUI.MainActivity" />
        </activity>

        <receiver
            android:name="com.innoquant.moca.push.MOCAPushReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.innoquant.moca.push.ACTION_PUSH_RECEIVE" />
                <action android:name="com.innoquant.moca.push.ACTION_PUSH_DISMISSED" />
            </intent-filter>
        </receiver>


        <!-- REQUIRED by MOCA to handle push notifications -->
        <receiver
            android:name="com.innoquant.moca.push.GcmPushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.unal.iun" />
            </intent-filter>
        </receiver>

        <!-- MOCA GcmTokenListener listens to token registrations/updates -->
        <service
            android:name="com.innoquant.moca.push.GcmTokenListener"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
    </application>

</manifest>
