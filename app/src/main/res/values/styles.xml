<resources>

    <!-- Base application theme. -->
    <style name="iUNTheme" parent="android:Theme.Holo">
        <item name="android:windowBackground">@drawable/fondo</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/fondoinf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:logo">@drawable/logo</item>
    </style>
    <style name="TextStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
