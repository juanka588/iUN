<resources>

    <!-- Base application theme. -->
    <style name="iUNTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/fondo</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/fondoinf</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
